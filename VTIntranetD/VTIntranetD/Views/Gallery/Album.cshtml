<head>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <style>

        body {
            font-family: Verdana, sans-serif;
            margin: 0;
        }
    
        * {
            box-sizing: border-box;
        }

        .row > .column {
            padding: 0 8px;
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .column {
            float: left;
            width: 25%;
        }

        /* The Modal (background) */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: black;
        }

        /* Modal Content */
        .modal-content {
            position: relative;
            background-color: #fefefe;
            margin: auto;
            padding: 0;
            width: 90%;
            max-width: 1200px;
        }

        /* The Close Button */
        .close {
            color: white;
            position: absolute;
            top: 10px;
            right: 25px;
            font-size: 35px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #999;
                text-decoration: none;
                cursor: pointer;
            }

        .mySlides {
            display: none;
        }

        .cursor {
            cursor: pointer;
        }

        /* Next & previous buttons */
        .prev,
        .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            margin-top: -50px;
            color: white;
            font-weight: bold;
            font-size: 20px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
            -webkit-user-select: none;
        }

        /* Position the "next button" to the right */
        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

            /* On hover, add a black background color with a little bit see-through */
            .prev:hover,
            .next:hover {
                background-color: rgba(0, 0, 0, 0.8);
            }

        /* Number text (1/3 etc) */
        .numbertext {
            color: #f2f2f2;
            font-size: 12px;
            padding: 8px 12px;
            position: absolute;
            top: 0;
        }

        img {
            margin-bottom: -4px;
        }

        .caption-container {
            text-align: center;
            background-color: black;
            padding: 2px 16px;
            color: white;
        }

        .demo {
            opacity: 0.6;
        }

            .active,
            .demo:hover {
                opacity: 1;
            }

        img.hover-shadow {
            transition: 0.3s;
        }

        .hover-shadow:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        #myGallery img {
            max-width: 300px;
            max-height: 170px;
            overflow: hidden;
            width: 100%;
            margin: 10px
        }

        #myGallery {
            display: grid;
            grid-template-columns: auto auto auto auto;
            text-align: center;
            margin: 20px;
            width: 95%;
        }

        .cajasin label > img {
            width: auto !important;
        }

        .cajasin > input {
            position: absolute;
            margin: 30px;
            display: none
        }

        #deletear {
            display: none
        }

        .visible input[type="checkbox"] + label:before {
            visibility: visible;
            display: block;
            content: "";
            left: 0
        }

        .visible #deletear {
            display: inline-block
        }

        .visible #myModal {
            display: none !important;
        }

        .modal {
            background-color: #23222291;
        }

        .modal-content {
            background-color: #fefefe;
            width: auto;
            min-width: auto;
            max-width: fit-content;
        }

        #myModal img {
            max-width: 100%;
            width: auto !important;
            height: 75vh;
        }

        .caption-container {
            background: none;
            position: absolute;
        }

        span.close.cursor {
            z-index: 1998;
            top: 50px;
            opacity: 1;
        }





        input[type="checkbox"] {
            display: none;
        }

            input[type="checkbox"] + label {
                display: block;
                position: relative;
                padding-left: 0;
                margin-bottom: 20px;
                font: 14px/20px 'Open Sans', Arial, sans-serif;
                color: #ddd;
                cursor: pointer;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
            }

                input[type="checkbox"] + label:last-child {
                    margin-bottom: 0;
                }

                input[type="checkbox"] + label:before {
                    visibility: hidden;
                    width: 20px;
                    height: 20px;
                    border: 2px solid #122143;
                    position: relative;
                    left: 0;
                    top: 0;
                    opacity: .6;
                    -webkit-transition: all .12s, border-color .08s;
                    transition: all .12s, border-color .08s;
                }

            input[type="checkbox"]:checked + label:before {
                width: 10px;
                top: -5px;
                left: 5px;
                border-radius: 0;
                opacity: 1;
                border-top-color: transparent;
                border-left-color: transparent;
                -webkit-transform: rotate(45deg);
                transform: rotate(45deg);
            }
    </style>
</head>
<div id="todo-album" class="prueba">
    <h2>@ViewBag.Title</h2>
    <hr />
    <!--Images gallery-->
    @if (ViewBag.rolName != "admin")
    {
        <div style="width:95%; margin:0 auto"><button id="del-img" class="btn btn-primary">Seleccionar imagenes</button><button id="deletear" class="btn btn-primary" style="margin-left:1%">Eliminar imagenes</button></div>
    }

    <div id="myGallery" class="prueba"></div>

    <div id="myModal" class="modal">
        <span class="close cursor" onclick="closeModal()">&times;</span>
        <div class="modal-content" id="modal-content">

            <a class="prev">&#10094;</a>
            <a class="next">&#10095;</a>

            <div class="caption-container">
                <p id="caption"></p>
            </div>

            <!--Images bar footer-->
            <div id="footer"></div>

        </div>
    </div>




    <script>

        let myGallery = document.querySelector("#myGallery");
        let modalContent = document.querySelector("#modal-content");
        let footerM = document.querySelector("#footer");
        let slides = document.getElementsByClassName("mySlides");
        let prev = document.querySelector(".prev");
        let next = document.querySelector(".next");

        $(document).ready(function () {

            var images = "@ViewBag.images";
            images = images.replace(/&quot;/g, '"');
            images = images.replace(/ /g, "");
            let json = JSON.parse(images);
            let next = 0;
            let slide;

            //console.log(json);
            loadPictures(json);

            function loadPictures(json) {
                console.log(json);

                let gallery = {
                    "gallery": [
                        { "id": "1", "name": "1.jpg", "path": "/UploadedFiles/adezxs.png" },
                        { "id": "2", "name": "2.jpg", "path": "/UploadedFiles/sizfw.jpg" },
                        { "id": "3", "name": "3.jpg", "path": "/UploadedFiles/miorm.jpg" },
                        { "id": "4", "name": "4.jpg", "path": "/UploadedFiles/xjfsu.jpg" },
                        { "id": "5", "name": "5.jpg", "path": "/UploadedFiles/qtncm.jpg" },
                        { "id": "6", "name": "6.jpg", "path": "/UploadedFiles/lmueby.png" },
                        { "id": "7", "name": "7.jpg", "path": "/UploadedFiles/lynsqwv.jpg" },
                        { "id": "8", "name": "2.jpg", "path": "/UploadedFiles/sbqxm.jpg" },
                        { "id": "9", "name": "2.jpg", "path": "/UploadedFiles/huuza.jpg" },
                    ]
                }

                for (let i = 0; i < json.length; i++) {
                    //total images for count slides
                    let imgMax = json.length;
                    let id = json[i].IdMultimedia;
                    //console.log(json[i].IdMultimedia);

                    //div´s

                    let column = document.createElement("label");
                    let mySlides = document.createElement("div");
                    let numberText = document.createElement("div");
                    let footer = document.createElement("div");
                    let inputs = document.createElement("input");
                    let cajainput = document.createElement("div");

                    //column.setAttribute("class", "column");

                    cajainput.setAttribute("class", "cajasin");
                    column.setAttribute("for", id);
                    mySlides.setAttribute("id", id);
                    mySlides.setAttribute("class", "mySlides");
                    inputs.setAttribute("id", id);
                    inputs.setAttribute("type", "checkbox");
                    inputs.setAttribute("class", "showinput");

                    numberText.setAttribute("class", "numbertext");
                    numberText.innerHTML = id + '/' + imgMax;
                    numberText.style.color = "#fff";
                    footer.setAttribute("class", "column");

                    //image
                    let img = document.createElement("img");
                    //console.log(img);
                    let imgSlide = document.createElement("img");
                    //console.log(imgSlide);
                    let imgFoo = document.createElement("img");
                    //console.log(imgFoo);

                    let path = json[i].Path;
                    console.log('@Href("~/UploadFiles/events/")');

                    img.src = path;
                    imgSlide.src = path;
                    imgFoo.src = path;
                    imgFoo.setAttribute("onclick", "currentSlide(" + id + ")");

                    img.setAttribute("class", "hover-shadow cursor funct");
                    img.style.width = "100%";
                    imgSlide.style.width = "100%";
                    imgFoo.setAttribute("class", "demo cursor");
                    imgFoo.style.width = "100%";


                    //add image to galley
                    column.append(img);
                    mySlides.append(numberText);
                    mySlides.append(imgSlide);
                    modalContent.append(mySlides);
                    myGallery.appendChild(cajainput);
                    cajainput.appendChild(inputs);
                    cajainput.appendChild(column);
                    //footer images modal
                    footer.append(imgFoo);
                    //footerM.append(footer);

                }

                let images = document.getElementsByClassName("funct");
                //console.log("images: " + images);

                for (let i = 0; i < images.length; i++) {
                    images[i].addEventListener('click', function () {

                        let index = i;
                        console.log("Index Image: " + index );
                        openModal();
                        currentSlide(index);

                    })
                }

            }

            $('#del-img').click(function () {

                var x = document.getElementById("todo-album");
                if (x.className === "prueba") {
                    x.className += " visible";
                } else {
                    x.className = "prueba";
                }

            });
        });

        function openModal() {
            document.getElementById('myModal').style.display = "block";
        }

        function closeModal() {
            console.log("entra a cerrar modal");
            document.getElementById('myModal').style.display = "none";
        }

        next.addEventListener("click", function () {

            nextSlide();

        }, false);

        prev.addEventListener("click", function () {

            prevSlide();

        }, false);

        function currentSlide(index) {
            cleanSlide();
            console.log("entra a currentSlide: " + index);
            slides[index].style.display = 'block';
            localStorage.setItem('index', index);

        }

        function showSlides(index) {

            console.log("entra a currentSlide: " + index);

            if (index === slides.length) {
                console.log("entra rebobinar");
                cleanSlide();
                let ban = 0;
                localStorage.removeItem('index');
                showSlides(ban);
                localStorage.setItem('index', ban);
                return;
            }



            cleanSlide();
            slides[index].style.display = 'block';
            localStorage.setItem('index', index);

        }

        function nextSlide() {
            let i = parseInt(localStorage.getItem('index'));
            i += 1;
            showSlides(i);
        }

        function prevSlide() {

            let i = parseInt(localStorage.getItem('index'));

            if (i === 0) {
                showSlides(slides.length - 1);
                return;
            }
            i -= 1;
            showSlides(i);
        }

        function cleanSlide() {
            //remove other images != select image
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
        }

        function closeModal() {
            let myModal = document.querySelector('#myModal');
            myModal.style.display = 'none';
            localStorage.clear();
        }
    </script>
</div>




